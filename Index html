body {
  font-family: Arial;
  text-align: center;
  background: linear-gradient(to bottom, #f0f8ff, #a0d8ef);
  margin: 0;
  padding: 20px;
}

#grid {
  display: grid;
  grid-template-columns: repeat(3, 60px);
  gap: 5px;
  justify-content: center;
  margin: 20px 0;
}

.cell {
  width: 60px;
  height: 60px;
  background: #87cefa;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  cursor: pointer;
  border-radius: 10px;
  user-select: none;
  transition: all 0.3s ease;
}

.cell.correct { background: #32cd32; color:white; }

#controls {
  margin-bottom: 10px;
}

button {
  padding: 5px 10px;
  font-size: 16px;
  border-radius: 5px;
  border: none;
  background-color: #ffa500;
  color: white;
  margin-left: 5px;
}

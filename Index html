<body>
<h2>Memory Game - Level <span id="level">1</span></h2>
<div id="grid"></div>
<div id="controls">
Score: <span id="score">0</span> | Timer: <span id="timer">0</span>s
<button id="hint-btn">Hint</button>
</div>
<button id="next-level-btn" style="display:none;">Next Level</button>

<script>
window.onload = function(){
  const grid = document.getElementById('grid');
  const scoreText = document.getElementById('score');
  const timerText = document.getElementById('timer');
  const hintBtn = document.getElementById('hint-btn');
  const nextBtn = document.getElementById('next-level-btn');
  const levelText = document.getElementById('level');

  let score = 0, level = 1, timer = 0, timerInterval;
  let numbers = [], userInput = [];

  function startLevel(){
    grid.innerHTML = '';
    userInput = [];
    numbers = [];
    let gridSize = 2 + level; // level 1 → 3x3, level 2 → 4x4 ...
    for(let i=1;i<=gridSize*gridSize;i++){ numbers.push(i); }
    numbers.sort(()=>Math.random()-0.5);

    grid.style.gridTemplateColumns = `repeat(${gridSize}, 60px)`;

    numbers.forEach(num=>{
      const cell = document.createElement('div');
      cell.classList.add('cell');
      cell.textContent = num;
      grid.appendChild(cell);
    });

    nextBtn.style.display = 'none';
    timer = 0; timerText.textContent = timer;

    clearInterval(timerInterval);
    timerInterval = setInterval(()=>{ timer++; timerText.textContent=timer; },1000);

    setTimeout(()=>{
      document.querySelectorAll('.cell').forEach(c=>c.textContent='');
      addCellEvents();
    }, 2000);
  }

  function addCellEvents(){
    const cells = document.querySelectorAll('.cell');
    cells.forEach((cell,index)=>{
      cell.addEventListener('click', function handler(){
        if(userInput.length < numbers.length){
          cell.textContent = numbers[index];
          cell.classList.add('correct');
          userInput.push(numbers[index]);
          score += 10;
          scoreText.textContent = score;

          if(userInput.length === numbers.length){
            clearInterval(timerInterval);
            nextBtn.style.display = 'block';
          }
        }
      }, {once:true});
    });
  }

  hintBtn.addEventListener('click', ()=>{
    if(userInput.length < numbers.length){
      const cell = document.querySelectorAll('.cell')[userInput.length];
      cell.textContent = numbers[userInput.length];
      cell.classList.add('correct');
      userInput.push(numbers[userInput.length]);
      score += 5;
      scoreText.textContent = score;

      if(userInput.length === numbers.length){
        clearInterval(timerInterval);
        nextBtn.style.display = 'block';
      }
    }
  });

  nextBtn.addEventListener('click', ()=>{
    level++;
    levelText.textContent = level;
    startLevel();
  });

  startLevel();
};
</script>
</body>

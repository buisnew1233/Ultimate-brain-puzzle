<script>
// Confetti effect
function createConfetti(){
  for(let i=0;i<50;i++){
    const c=document.createElement('div'); c.classList.add('confetti');
    c.style.left=Math.random()*window.innerWidth+'px';
    c.style.backgroundColor='hsl('+Math.random()*360+',100%,50%)';
    document.body.appendChild(c);
    let top=0; let fall=setInterval(()=>{
      if(top>window.innerHeight){ c.remove(); clearInterval(fall); return; }
      top+=Math.random()*5+2; c.style.top=top+'px';
    },20);
  }
}

window.onload=function(){
  const grid=document.getElementById('grid');
  const scoreText=document.getElementById('score');
  const timerText=document.getElementById('timer');
  const hintBtn=document.getElementById('hint-btn');
  const nextBtn=document.getElementById('next-level-btn');
  const levelText=document.getElementById('level');
  const starsDiv=document.getElementById('stars');
  const hintLeftSpan=document.getElementById('hint-left');
  const highscoreVal=document.getElementById('highscore-val');
  const totalHigh=document.getElementById('total-high');
  const popup=document.getElementById('popup');
  const popupScore=document.getElementById('popup-score');
  const popupStars=document.getElementById('popup-stars');
  const popupTitle=document.getElementById('popup-title');
  const popupNext=document.getElementById('popup-next');
  const shareBtn=document.getElementById('share-btn');

  const correctSound=document.getElementById('correct-sound');
  const wrongSound=document.getElementById('wrong-sound');
  const bgMusic=document.getElementById('bg-music'); bgMusic.volume=0.3; bgMusic.play();

  let score=0, level=1, timer=0, timerInterval;
  let numbers=[], userInput=[], hintLeft=3;
  let levelTime=30;

  function vibrate(d=50){ if(navigator.vibrate) navigator.vibrate(d); }
  function playSound(correct=true){ if(correct) correctSound.play(); else wrongSound.play(); }
  function getHighScore(level){ return parseInt(localStorage.getItem('memory_high_'+level))||0; }
  function setHighScore(level,score){ localStorage.setItem('memory_high_'+level,score); }
  function getTotalHigh(){ return parseInt(localStorage.getItem('memory_total_high'))||0; }
  function setTotalHigh(score){ localStorage.setItem('memory_total_high',score); totalHigh.textContent=score; }

  function startLevel(){
    grid.innerHTML=''; userInput=[]; numbers=[]; starsDiv.innerHTML=''; popup.style.display='none';
    hintLeft=3; hintLeftSpan.textContent=hintLeft; levelTime=30+level*5;
    timer=levelTime; timerText.textContent=timer;
    let gridSize=2+level; for(let i=1;i<=gridSize*gridSize;i++) numbers.push(i);
    numbers.sort(()=>Math.random()-0.5); grid.style.gridTemplateColumns=`repeat(${gridSize},60px)`;
    numbers.forEach(num=>{ const cell=document.createElement('div'); cell.classList.add('cell');
      cell.innerHTML=`<div class="cell-inner"><div class="cell-front"></div><div class="cell-back">${num}</div></div>`;
      grid.appendChild(cell);
    });
    nextBtn.style.display='none'; scoreText.textContent=score; highscoreVal.textContent=getHighScore(level); totalHigh.textContent=getTotalHigh();
    clearInterval(timerInterval);
    timerInterval=setInterval(()=>{
      timer--; timerText.textContent=timer;
      if(timer<=0){ clearInterval(timerInterval); levelFail(); }
    },1000);
    setTimeout(()=>{document.querySelectorAll('.cell').forEach(c=>c.classList.remove('flip')); addCellEvents();},2000);
  }

  function addCellEvents(){
    const cells=document.querySelectorAll('.cell');
    cells.forEach((cell,index)=>{
      cell.addEventListener('click',function handler(){
        if(userInput.length<numbers.length){
          cell.classList.add('flip'); cell.classList.add('flash'); setTimeout(()=>cell.classList.remove('flash'),200);
          userInput.push(numbers[index]); score+=10; scoreText.textContent=score;
          playSound(true); vibrate(30);
          if(userInput.length===numbers.length){ clearInterval(timerInterval); levelComplete(); }
        } else { playSound(false); vibrate(100); }
      },{once:true});
    });
  }

  function levelComplete(){
    let bonus=Math.floor(timer*2); score+=bonus; scoreText.textContent=score;
    let starCount=Math.min(3,Math.max(1,30-Math.floor((levelTime-timer)/2)));
    starsDiv.innerHTML='★'.repeat(starCount); popupStars.textContent='★'.repeat(starCount);
    popupScore.textContent=score; popupTitle.textContent='Level Complete! Bonus: '+bonus;
    createConfetti();
    if(score>getHighScore(level)) setHighScore(level,score);
    if(score>getTotalHigh()) setTotalHigh(score);
    popup.style.display='flex';
  }

  function levelFail(){
    popupTitle.textContent='Time Up! Level Failed'; popupScore.textContent=score; popupStars.textContent='';
    popup.style.display='flex';
  }

  hintBtn.addEventListener('click',()=>{
    if(hintLeft>0 && userInput.length<numbers.length){
      const cell=document.querySelectorAll('.cell')[userInput.length];
      cell.classList.add('flip'); cell.classList.add('flash'); setTimeout(()=>cell.classList.remove('flash'),200);
      userInput.push(numbers[userInput.length]); score+=5; scoreText.textContent=score;
      playSound(true); vibrate(50);
      hintLeft--; hintLeftSpan.textContent=hintLeft;
      if(userInput.length===numbers.length){ clearInterval(timerInterval); levelComplete(); }
    } else { vibrate(100); playSound(false); }
  });

  popupNext.addEventListener('click',()=>{
    level++; levelText.textContent=level; numbers=[];
    startLevel();
  });

  shareBtn.addEventListener('click',()=>{
    if(navigator.share){ navigator.share({title:'Memory Game Score', text:'I scored '+score+' points in Memory Game!'});}
    else{ alert('Score: '+score+'\nCopy and share manually!'); }
  });

  startLevel();
};
</script>
</body>
</html>
